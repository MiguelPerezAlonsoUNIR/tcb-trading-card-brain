# Ansible Inventory Example
# Copy this file to 'hosts' and update with your server information

[app_servers]
# AWS
aws-app ansible_host=<AWS_PUBLIC_IP> ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/aws-key.pem

# Azure
azure-app ansible_host=<AZURE_PUBLIC_IP> ansible_user=azureuser ansible_ssh_private_key_file=~/.ssh/azure-key.pem

# GCP
gcp-app ansible_host=<GCP_PUBLIC_IP> ansible_user=gcpuser ansible_ssh_private_key_file=~/.ssh/gcp-key.pem

[db_servers]
# If using separate database server
db-server ansible_host=<DB_SERVER_IP> ansible_user=ubuntu ansible_ssh_private_key_file=~/.ssh/key.pem

[app_servers:vars]
app_name=tcb-trading-card-brain
app_user=tcbapp
app_dir=/opt/tcb-trading-card-brain
repo_url=https://github.com/MiguelPerezAlonsoUNIR/tcb-trading-card-brain.git
repo_branch=main
secret_key=change-this-to-a-secure-random-string
database_url=sqlite:///tcb.db
flask_env=production
gunicorn_workers=2
initialize_db=true

[db_servers:vars]
db_name=tcb_db
db_user=tcbapp
db_password=change-this-to-a-secure-password
postgresql_version=14
allow_remote_connections=true
